require './lib/dish'
require './lib/menu'
require './lib/order'
require './lib/customer'
require './lib/message'
require './lib/restaurant'


soup = Dish.new('soup', 3)
rice = Dish.new('rice', 2)
chicken = Dish.new('chicken', 4)
beef = Dish.new('beef', 5)
pizza = Dish.new('pizza', 5)


chinese = Menu.new
chinese.add_dish(soup)
chinese.add_dish(rice)
chinese.add_dish(chicken)
chinese.add_dish(beef)

italian = Menu.new
italian.add_dish(pizza)

carlo = Restaurant.new(italian)

fudo = Restaurant.new(chinese)
attilla = Customer.new("Attila","+448768")


order = Order.new(fudo,attila)
order.add_item(beef, 2)
order.add_item(pizza, 3)

order.place_order(19)


it_order = Order.new(carlos,attila)
it_order.add_item(pizza,1)
it_order.place_order(5)
